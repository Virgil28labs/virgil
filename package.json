{
  "name": "virgil",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev-full": "./start-dev.sh",
    "dev-quick": "./start-dev-background.sh",
    "backend": "cd server && npm run dev",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev-fast": "vite --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}' --collectCoverageFrom='server/**/*.js'",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:coverage:full": "jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}' --collectCoverageFrom='server/**/*.js' --coverageDirectory=coverage-full",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "type-check": "tsc --noEmit",
    "check-env": "./check-env.sh",
    "cleanup-ports": "./cleanup-ports.sh",
    "diagnose": "./diagnose.sh",
    "css:monitor": "node scripts/css-monitor.js",
    "benchmark:storage": "npm run build && node scripts/benchmark-storage.js",
    "check:date-usage": "node scripts/check-date-usage.js",
    "pre-commit": "npm run lint && npm run type-check && npm run check:date-usage",
    "build:analyze": "vite build --mode analyze",
    "build:size": "npm run build && echo '\nðŸ“Š Build Size Report:' && du -sh dist/* | sort -h"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "@types/luxon": "^3.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "luxon": "^3.7.1",
    "markdown-to-jsx": "^7.7.12",
    "react": "^19.1.0",
    "react-camera-pro": "^1.4.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "axe-playwright": "^2.1.0",
    "cssnano": "^7.1.0",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^11.0.3",
    "globals": "^16.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.4",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "postcss-calc": "^10.1.1",
    "postcss-combine-media-query": "^2.0.0",
    "postcss-custom-properties": "^14.0.6",
    "postcss-import": "^16.1.1",
    "postcss-merge-rules": "^7.0.6",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.2.4",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0"
  }
}
